%section.items
  %h2.items__head ピックアップカテゴリー
  %section.items__box.clearfix
    %h3.items__title-text
      = link_to '新着アイテム', categories_path
    .items__box-contents.clearfix
      -@items.each do |item|
        = render '/items/form/item-box', item: item
    .items__view-all
      = link_to "すべての商品を見る", categories_path

