.signup-container
  %header.signup-header
    =render 'headerLogo'
  %main.signup-main
    %section.l-signup-container
      %h2.l-signup-head 新規会員登録
      .l-signup-inner
        .l-signup-content
          %a.btn-default.btn-mail{:href => "https://www.mercari.com/jp/signup/registration/"}
            %i.btn-mail.far.fa-envelope
            メールアドレスで登録
        .l-signup-content
          =link_to "Facebookで登録", user_facebook_omniauth_callback_path
        .l-signup-content
          =link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path
          
  %footer.signup-footer
    =render 'footer'


