.signup-container
  %header.signup-header
    =render 'headerLogo'
  %main.signup-main
    %section.l-signup-container
      %h2.l-signup-head 新規会員登録
      .l-signup-inner
        .l-signup-content
          =link_to new_user_registration_path, class: 'btn-default btn-mail' do
            %i.btn-mail.far.fa-envelope
            メールアドレスで登録
  %footer.signup-footer
    =render 'footer'
