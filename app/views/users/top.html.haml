.signup-container
  %header.signup-header
    = render '/layouts/accounts/headerLogo'
  %main.signup-main
    %section.l-signup-container
      %h2.l-signup-head 新規会員登録
      .l-signup-inner
        .l-signup-content
          =link_to new_user_registration_path, class: 'btn-default btn-mail' do
            %i.btn-mail.far.fa-envelope
            メールアドレスで登録
          %br/
          =link_to user_facebook_omniauth_authorize_path do
            %btn#facebook-login.btn-default.btn-sns.btn-sns-facebook
              %i.icon-facebook.fab.fa-facebook-f
              Facebookで登録
          %br/
          =link_to user_google_oauth2_omniauth_authorize_path do
            %btn#google-login.btn-default.btn-sns.btn-sns-google
              %i.icon-google-plus.fab.fa-google-plus-g
              Googleで登録
        </button>
  %footer.signup-footer
    = render '/layouts/accounts/footer'
