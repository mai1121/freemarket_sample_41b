<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nickname,"ニックネーム必須" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number%>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
  <%= f.label :postal_code %><br />
  <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :prefecture %><br />
  <%= f.select :prefecture, User.statuses.keys %>
  </div>

  <div class="field">
  <%= f.label :city %><br />
  <%= f.text_field :city %>
  </div>

  <div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :building_name %><br />
  <%= f.text_field :building_name %>
  </div>

  <div class="field">
  <%= f.label :birth_year %><br />
  <%= f.text_field :birth_year %>
  </div>

  <div class="field">
  <%= f.label :birth_month %><br />
  <%= f.text_field :birth_month %>
  </div>

  <div class="field">
  <%= f.label :birth_day %><br />
  <%= f.text_field :birth_day %>
  </div>

  <div class="field">
    <%= f.label :credit_card_num %><br />
    <%= f.text_field :credit_card_num%>
  </div>

  <div class="field">
    <%= f.label :credit_card_expiration_month %><br />
    <%= f.text_field :credit_card_expiration_month %>
  </div>

  <div class="field">
    <%= f.label :credit_card_expiration_year %><br />
    <%= f.text_field :credit_card_expiration_year %>
  </div>

  <div class="field">
    <%= f.label :credit_card_security_num %><br />
    <%= f.text_field :credit_card_security_num %>
  </div>

  <div class="field">
    <%= f.text_field :uid, type: "hidden"  %>
  </div>

  <div class="field">
    <%= f.text_field :provider, type: "hidden"  %>
  </div>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
