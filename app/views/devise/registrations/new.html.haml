.signup-container
  %header.signup-header
    =render '/layouts/accounts/headerLogo'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.active 会員情報
        %li 電話番号認証
        %li 住所入力
        %li 支払い方法
        %li 完了
  %main.signup-main
    %section.l-signup-container
      %h2.l-signup-head 会員情報入力
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "l-signup-inner"}) do |f|
        .l-signup-content
          = devise_error_messages!
          .form-group
            = f.label :nickname,"ニックネーム"
            %span.form-require 必須
            %br/
            = f.text_field :nickname, autofocus: true, placeholder: "例）メルカリ太郎", autocomplete: "nickname", class: "input-default"
          .form-group
            = f.label :email, "メールアドレス"
            %br/
            = f.email_field :email, autofocus: true, placeholder: "PC・携帯どちらでも可", autocomplete: "email", class: "input-default"
          .form-group
            = f.label :password, "パスワード"
            %br/
            = f.password_field :password, placeholder: "6文字以上", autocomplete: "new-password", class: "input-default"
          .form-group
            = f.label :password_confirmation, "パスワード（確認)"
            %br/
            = f.password_field :password_confirmation, placeholder: "6文字以上", autocomplete: "new-password", class: "input-default"
          .form-group
            = f.label :phone_number
            %br/
            = f.telephone_field :phone_number, class: "input-default"
          .form-group
            = f.label :first_name
            %br/
            = f.text_field :first_name, class: "input-default"
          .form-group
            = f.label :last_name
            %br/
            = f.text_field :last_name, class: "input-default"
          .form-group
            = f.label :first_name_kana
            %br/
            = f.text_field :first_name_kana, class: "input-default"
          .form-group
            = f.label :last_name_kana
            %br/
            = f.text_field :last_name_kana, class: "input-default"
          .form-group
            = f.label :postal_code
            %br/
            = f.text_field :postal_code, class: "input-default"
          .form-group
            = f.label :prefecture
            %br/
            = f.select :prefecture, User.statuses.keys, class: "input-default"
          .form-group
            = f.label :city
            %br/
            = f.text_field :city, class: "input-default"
          .form-group
            = f.label :address
            %br/
            = f.text_field :address, class: "input-default"
          .form-group
            = f.label :building_name
            %br/
            = f.text_field :building_name, class: "input-default"
          .form-group
            = f.label :birth_year
            %br/
            = f.text_field :birth_year, class: "input-default"
          .form-group
            = f.label :birth_month
            %br/
            = f.text_field :birth_month, class: "input-default"
          .form-group
            = f.label :birth_day
            %br/
            = f.text_field :birth_day, class: "input-default"
          .form-group
            = f.label :credit_card_num
            %br/
            = f.text_field :credit_card_num, class: "input-default"
          .form-group
            = f.label :credit_card_expiration_month
            %br/
            = f.text_field :credit_card_expiration_month, class: "input-default"
          .form-group
            = f.label :credit_card_expiration_year
            %br/
            = f.text_field :credit_card_expiration_year, class: "input-default"
          .form-group
            = f.label :credit_card_security_num
            %br/
            = f.text_field :credit_card_security_num
          .actions
            = f.submit "Sign up"
  %footer.signup-footer
    =render '/layouts/accounts/footer'
