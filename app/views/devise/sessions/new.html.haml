.signin-container
  %header.signup-header
    =render '/layouts/accounts/headerLogo'
  %main.signin-main
    %section.l-signin-container
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        %h2.l-signin-head
          .login-no-account
            %p アカウントをお持ちでない方はこちら
            =link_to '新規会員登録',users_sign_up_top_path, class: 'btn-default btn-blue'
        .l-signin-inner
          .l-signin-content
            =link_to 'Facebookでログイン',user_facebook_omniauth_authorize_path 
            =link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path
            .form-group
              = f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "input-default"
            .form-group
              = f.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class: "input-default"
            .form-group
              = recaptcha_tags
            .actions
              = f.submit "ログイン", class: "btn-default btn-red"
            .form-group
              %a{href: "/"} パスワードをお忘れの方
  %footer.signin-footer
    =render '/layouts/accounts/footer'
